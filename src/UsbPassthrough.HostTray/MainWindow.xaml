<Window x:Class="UsbPassthrough.HostTray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="USB Passthrough Host"
        Width="1280"
        Height="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Padding="12" CornerRadius="12" Background="#22000000">
            <DockPanel LastChildFill="False">
                <TextBlock Text="USB Passthrough" FontSize="22" FontWeight="SemiBold" DockPanel.Dock="Left" />
                <Border CornerRadius="14" Background="#1E90FF" Padding="10,4" Margin="12,0" DockPanel.Dock="Right">
                    <TextBlock x:Name="ServiceStatusText" Text="Service: Unknown" Foreground="White" />
                </Border>
                <TextBox x:Name="SearchBox" Width="280" VerticalContentAlignment="Center" TextChanged="OnSearchChanged" DockPanel.Dock="Right" />
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" CornerRadius="12" Background="#18000000" Padding="8">
            <ListBox x:Name="NavList" SelectionChanged="OnNavChanged">
                <ListBoxItem Content="Devices" IsSelected="True" />
                <ListBoxItem Content="Attachments" />
                <ListBoxItem Content="Logs" />
                <ListBoxItem Content="Settings" />
            </ListBox>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" CornerRadius="12" Background="#10000000" Padding="8">
            <TabControl x:Name="MainTabs" BorderThickness="0" Background="Transparent">
                <TabItem Header="Devices">
                    <Grid>
                        <DataGrid x:Name="DevicesGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="FriendlyName" Binding="{Binding FriendlyName}" Width="2*" />
                                <DataGridTextColumn Header="VID:PID" Binding="{Binding VidPid}" Width="*" />
                                <DataGridTextColumn Header="Serial" Binding="{Binding Serial}" Width="*" />
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                                <DataGridTextColumn Header="Connected Client" Binding="{Binding AttachedVm}" Width="*" />
                                <DataGridTemplateColumn Header="Actions" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Share" Click="OnShareDevice" Tag="{Binding DeviceId}" />
                                                <Button Content="Unshare" Click="OnUnshareDevice" Tag="{Binding DeviceId}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Attachments">
                    <Grid>
                        <DataGrid x:Name="AttachmentGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Device" Binding="{Binding FriendlyName}" Width="*" />
                                <DataGridTextColumn Header="Client" Binding="{Binding ClientAddress}" Width="*" />
                                <DataGridTextColumn Header="Since" Binding="{Binding Since}" Width="*" />
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Logs">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="LogLevelFilter" Width="120">
                                <ComboBoxItem Content="All" IsSelected="True" />
                                <ComboBoxItem Content="Information" />
                                <ComboBoxItem Content="Warning" />
                                <ComboBoxItem Content="Error" />
                            </ComboBox>
                            <Button Content="Export" Click="OnExportLogs" />
                        </StackPanel>
                        <DataGrid Grid.Row="1" x:Name="LogsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="*" />
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="*" />
                                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="3*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Settings">
                    <StackPanel>
                        <CheckBox x:Name="StartWithWindows" Content="Start with Windows (Tray)" />
                        <CheckBox x:Name="StartMinimized" Content="Start minimized to tray" />
                        <CheckBox x:Name="AutoReconnect" Content="Auto-Reconnect global" />
                        <CheckBox x:Name="Notifications" Content="Notifications on/off" />
                        <TextBox x:Name="PskBox" Width="300" />
                        <TextBox x:Name="CertBox" Width="300" />
                        <WrapPanel>
                            <Button Content="Save Settings" Click="OnSaveSettings" />
                            <Button Content="Create diagnostics bundle" Click="OnCreateDiagnostics" />
                        </WrapPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>